modules = ["python-3.12", "nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Start AnnaiCONNECT"

[[workflows.workflow]]
name = "Start AnnaiCONNECT"
author = 46915851
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8001 --reload"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && REACT_APP_API_URL=https://$REPL_SLUG.$REPL_OWNER.repl.co:8001/api yarn start"
